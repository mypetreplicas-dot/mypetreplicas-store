<mjml>
    <mj-head>
        <mj-title>{{ title }}</mj-title>
        <mj-attributes>
            <mj-all font-family="'Inter', 'Helvetica Neue', Arial, sans-serif" />
            <mj-text color="#f4f4f5" font-size="15px" line-height="1.6" />
            <mj-section background-color="#0c0c0e" />
        </mj-attributes>
        <mj-style inline="inline">
            h3 {
                font-size: 18px;
                color: #a1a1aa;
                font-weight: normal;
            }
        </mj-style>
    </mj-head>

    <mj-body background-color="#0c0c0e">
        <mj-section background-color="#131316" padding="24px 0">
            <mj-column>
                <mj-text align="center" font-size="28px" font-weight="700" color="#f4f4f5" font-family="'Outfit', 'Helvetica Neue', Arial, sans-serif" padding="10px 0">
                    My Pet Replicas
                </mj-text>
                <mj-divider border-color="#d4703e" border-width="2px" padding="0 120px" />
            </mj-column>
        </mj-section>
